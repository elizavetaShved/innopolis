<div class="modal-auth modal" id="modal-{{ type }}-host">
  <div class="modal__container">
    <div class="modal__content">
      <form data-need-validation data-parsley-validate data-parsley-focus="none" class="gl__form">
        <div class="modal__header">
          <div class="modal__title">
            Забронировать
          </div>
          <button type="button" class="modal__close-btn">
            <svg width="20" height="20" aria-hidden="true" class="modal__close-icon">
              <use xlink:href="#close"></use>
            </svg>
          </button>
        </div>

        <div class="modal__text">
          <span class="js-calendar-slots-text-date"></span>
          <span class="js-calendar-slots-text-auditorium"></span>
          <span class="js-calendar-slots-text-time"></span>
        </div>

        <input type="hidden" class="js-calendar-value-dates" value="1, 2,3">

        <ul class="modal__inputs-list">
          <li class="gl__input-container">
            <div class="gl__input-title">Имя</div>
            {{> controls/input-main
              required=true
              inputType="text"
              name="name"
              type="to-book"
              placeholder="Анатолий"
              isContacts=true
            }}
          </li>
          <li class="gl__input-container">
            <div class="gl__input-title">Фамилия</div>
            {{> controls/input-main
              required=true
              inputType="text"
              name="surname"
              type="to-book"
              placeholder="Иванов"
              isContacts=true
            }}
          </li>
          <li class="gl__input-container">
            <div class="gl__input-title">Компания</div>
            {{> controls/input-main
              required=true
              inputType="text"
              name="place-work"
              type="to-book"
              placeholder="Место работы"
              isContacts=true
            }}
          </li>
          <li class="gl__input-container">
            <div class="gl__input-title">E-mail</div>
            {{> controls/input-main
              inputType="email"
              required=true
              name="email"
              type="to-book"
              placeholder="info@gmail.com"
              parsleyType="email"
            }}
          </li>
          <li class="gl__input-container">
            <div class="gl__input-title">Телефон</div>
            {{> controls/input-main
              required=true
              inputType="tel"
              name="phone"
              type="to-book"
              placeholder="+7(888)888-88-88"
              isPhone="true"
            }}
          </li>
        </ul>

        <div class="gl__radio-input-container">
          <div class="gl__checkbox-item">
            <div class="gl__form-radio-wrapper">
              {{> controls/input-radio-checkbox
                required="true"
                name="agreement-processing"
                type=type
                inputType="checkbox"
                inputCaption="Я подтверждаю свое согласие на"
                inputCaptionLink="обработку персональных данных"
              }}
            </div>
          </div>
          <div class="gl__checkbox-item">
            <div class="gl__form-radio-wrapper">
              {{> controls/input-radio-checkbox
                required="true"
                name="agreement-processing-policy"
                type=type
                inputType="checkbox"
                inputCaption="Я подтверждаю свое согласие с"
                inputCaptionLink="политикой обработки персональных данных"
              }}
            </div>
          </div>
          <div class="gl__checkbox-item">
            <div class="gl__form-radio-wrapper">
              {{> controls/input-radio-checkbox
                required="true"
                name="agreement-processing-terms-contract"
                type=type
                inputType="checkbox"
                inputCaption="Я подтверждаю свое согласие с"
                inputCaptionLink="условиями договора оказания услуг"
              }}
            </div>
          </div>
        </div>

        <div class="gl__error-block js-error-block">
          <img src="img/old/img/error-form.svg" alt="" class="gl__error-icon">
          <div class="gl__error-content">
            Ошибка
          </div>
        </div>

        <button type="submit" class="gl__btn-submit js-btn-submit modal-to-book__btn gl__main-btn mod-no-shadow mod-middle-2 mod-long">
          Зарегистрироваться
        </button>
      </form>
    </div>
  </div>
</div>
