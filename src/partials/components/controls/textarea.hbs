<!--
  ___Обязательные поля___
  name - обязательно префикс - род.компонент (н-р services-tel)
  placeholder

  ___Необязательные поля___
  required (true/false) - обязательно для заполнения
  minLength - деф-2
  maxLength - деф-none
-->

<label class="gl__input-wrapper">
  {{#if required }}
    <span class="gl__input-mark-required"></span>
  {{/if}}
  <textarea class="gl__input mod-textarea"
            placeholder="{{ placeholder }}"
            name="{{ name }}-{{ type }}"
    {{#if required }}
            data-parsley-required=""
    {{/if}}

    {{#if minLength }}
            data-parsley-minlength="{{ minLength }}"
    {{else}}
            data-parsley-minlength="2"
    {{/if}}

    {{#if maxLength }}
            data-parsley-maxlength="{{ maxLength }}"
    {{/if}}></textarea>
</label>
